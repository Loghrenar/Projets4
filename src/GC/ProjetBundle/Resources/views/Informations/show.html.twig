{% extends 'GCProjetBundle::layoutt.html.twig' %}

{% block body -%}
    <h1>Informations</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Infodesc</th>
                <td>{{ entity.infoDesc }}</td>
            </tr>
            <tr>
                <th>Infonom</th>
                <td>{{ entity.infoNom }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('gc_informations') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('gc_informations_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
